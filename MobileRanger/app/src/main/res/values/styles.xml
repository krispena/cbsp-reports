<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="colorPrimary">@color/tpwd_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorButtonNormal">@color/tpwd_brown</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ActionBarStyle"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/tpwd_green</item>
        <item name="background">@color/tpwd_green</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
